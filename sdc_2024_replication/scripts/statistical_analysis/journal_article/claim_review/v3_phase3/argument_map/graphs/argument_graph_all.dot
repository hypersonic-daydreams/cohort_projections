// Full-paper argument network.
// Populate this file from argument_map.jsonl when ready.

digraph ArgumentGraphAll {
  graph [rankdir=LR, fontname="Helvetica", fontsize=12];
  node [fontname="Helvetica", fontsize=10, style=filled, fillcolor="#f7f7f7", color="#444444"];
  edge [fontname="Helvetica", fontsize=9, color="#555555"];

  // Legend (optional)
  subgraph cluster_legend {
    label="Legend";
    style=dashed;
    color="#bbbbbb";

    L_claim [label="Claim", shape=box, fillcolor="#e8f0fe"];
    L_grounds [label="Grounds", shape=ellipse, fillcolor="#e6f4ea"];
    L_warrant [label="Warrant", shape=diamond, fillcolor="#fff4e5"];
    L_backing [label="Backing", shape=hexagon, fillcolor="#fce8e6"];
    L_qualifier [label="Qualifier", shape=note, fillcolor="#f3e8fd"];
    L_rebuttal [label="Rebuttal", shape=octagon, fillcolor="#fde7f3"];
  }
}
