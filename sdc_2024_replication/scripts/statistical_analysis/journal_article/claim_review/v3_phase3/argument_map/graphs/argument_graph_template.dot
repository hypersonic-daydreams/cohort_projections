// Template for a single argument chain.
// Replace the node IDs and labels with real argument_map.jsonl entries.

digraph ArgumentTemplate {
  graph [rankdir=LR, fontname="Helvetica", fontsize=12];
  node [fontname="Helvetica", fontsize=10, style=filled, fillcolor="#f7f7f7", color="#444444"];
  edge [fontname="Helvetica", fontsize=9, color="#555555"];

  // Role styling examples
  // claim: box
  // grounds: ellipse
  // warrant: diamond
  // backing: hexagon
  // qualifier: note
  // rebuttal: octagon

  A0001 [label="Claim: ...", shape=box, fillcolor="#e8f0fe"];
  A0002 [label="Grounds: ...", shape=ellipse, fillcolor="#e6f4ea"];
  A0003 [label="Warrant: ...", shape=diamond, fillcolor="#fff4e5"];
  A0004 [label="Backing: ...", shape=hexagon, fillcolor="#fce8e6"];
  A0005 [label="Qualifier: ...", shape=note, fillcolor="#f3e8fd"];
  A0006 [label="Rebuttal: ...", shape=octagon, fillcolor="#fde7f3"];

  A0002 -> A0001 [label="supports"];
  A0003 -> A0001 [label="warrants"];
  A0004 -> A0003 [label="backs"];
  A0005 -> A0001 [label="qualifies"];
  A0006 -> A0001 [label="rebuts"];
}
